<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="navigatingTo">
    <ActionBar title="TUG Test" backgroundColor="GreenYellow">
        <ActionItem
                icon="font://&#xe161;"
                tap="{{ onSaveExecutions }}"
                android.position="actionBar"
                class="mdi-ro"
        ></ActionItem>
        <ActionItem
                text="Delete TUG executions"
                tap="{{ onDeleteExecutions }}"
                android.position="popup"
        ></ActionItem>
        <ActionItem
                text="Add fake execution"
                tap="{{ addFakeExecution }}"
                android.position="popup"
        ></ActionItem>
    </ActionBar>

    <StackLayout width="85%">

        <StackLayout>
            <Label text="Start a TUG execution from an available device:"
                   class="label-header"
            ></Label>
            <Label text="Local device:"></Label>
            <GridLayout columns="2*,6*,3*" rows="*,2*" class="simple-card device">
                <Label col="0" row="0" rowSpan="2" text="&#xe32c;" class="mdi-ro"></Label>
                <Label col="1" row="0">
                    <FormattedString>
                        <Span text="Name: " class="label-header bold"></Span>
                        <Span text="{{ localNode.name }}" class="label-header"></Span>
                    </FormattedString>
                </Label>
                <GridLayout col="1" row="1" columns="*,*" rows="*,2*">
                    <Label col="0" row="0" horizontalAlignment="center" colSpan="3" text="Operation mode:"></Label>
                    <Label id="tugSelector" col="0" row="1" text="TUG" class="mode-selector left" tap="{{ modeSelected }}"></Label>
                    <Label id="collectionSelector" col="1" row="1" text="Collection" class="mode-selector right" tap="{{ modeSelected }}"></Label>
                </GridLayout>
                <Button col="2" row="0" rowSpan="2" text="Start" class="-primary" tap="{{ onStartInLocalDevice }}"
                        visibility="{{ runningLocal ? 'collapsed' : 'visible' }}"></Button>
                <Button col="2" row="0" rowSpan="2" text="Stop" class="-primary" tap="{{ onStopInLocalDevice }}"
                        visibility="{{ runningLocal ? 'visible' : 'collapsed' }}"></Button>
            </GridLayout>
            <Label text="Connected device:"></Label>
        </StackLayout>

        <StackLayout visibility="{{ resultsVM.length === 0 ? 'visible' : 'collapsed' }}">
            <Label text="There are no TUG executions" class="label-title"/>
        </StackLayout>


        <StackLayout visibility="{{ resultsVM.length !== 0 ? 'visible' : 'collapsed' }}">
            <Label text="Results from TUG tests perfomed" class="label-title" ></Label>
            <Label text="Tap on a TUG test result to see more information" class="label-header"></Label>
            <ListView items="{{ resultsVM }}" itemTap="onTugResultTap" separatorColor="Transparent">
                <ListView.itemTemplate>
                    <StackLayout>
                        <GridLayout columns="*,3*" rows="*,*" class="simple-card">
                            <Label col="0" row="0" rowSpan="2" text="&#xe634;" class="mdi-ro">

                            </Label>
                            <Label col="1" row="0">
                                <FormattedString>
                                    <Span text="Date: " class="label-header bold"></Span>
                                    <Span text="{{ date }}" class="label-header"></Span>
                                </FormattedString>
                            </Label>
                            <Label col="1" row="1">
                                <FormattedString>
                                    <Span text="Duration: " class="label-header bold"></Span>
                                    <Span text="{{ duration }}" class="label-header"></Span>
                                </FormattedString>
                            </Label>
                        </GridLayout>
                    </StackLayout>
                </ListView.itemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</Page>
